

<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><%= @standart.title %></h3>
  		</div>
  		<div class="panel-body">

  			<%= render :file => "public/standarts_html/#{@standart.content}" %>
			
		</div>	
	</div>
</div>
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Примеры внедрения</h3>
  		</div>
  		<div class="panel-body">

  			<% @standart.products.each do |product| %>
	<p>
	<%= link_to "#{product.title}".html_safe,product.content %>	
	</p>
<% end %>
			
		</div>	
	</div>
</div>


<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Добавить пример внедрения</h3>
  		</div>
  		<div class="panel-body">

  			<%= form_for([@standart, @standart.products.build]) do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :feature %><br />
		<%= f.text_area :feature %>
	</p>

	<p>
		<%= f.label :name %><br />
		<%= f.text_area :name %>
	</p>
	<p>
		<%= f.label :form_factor %><br />
		<%= f.text_area :form_factor %>
	</p>
	<p>
		<%= f.label :is_module? %><br />
		<%= f.text_area :is_module? %>
	</p>

	<p>
		<%= f.submit %>
	</p>
	<% end %>
			
		</div>	
	</div>
</div>

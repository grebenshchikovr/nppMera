

<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><%= @direction.title %></h3>
  		</div>
  		<div class="panel-body">

  			<%= render :file => "public/directions_html/#{@direction.content}" %>
			
		</div>	
	</div>
</div>
<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Примеры внедрения</h3>
  		</div>
  		<div class="panel-body">

  			<% @direction.examples.each do |example| %>
	<p>
	<%= link_to "#{example.title}".html_safe,example.content %>	
	</p>
<% end %>
			
		</div>	
	</div>
</div>


<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Добавить пример внедрения</h3>
  		</div>
  		<div class="panel-body">

  			<%= form_for([@direction, @direction.examples.build]) do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</p>

	<p>
		<%= f.submit %>
	</p>
	<% end %>
			
		</div>	
	</div>
</div>

<h1><%= t('directions.direction_new') %></h1>

<%= form_for :direction, url: directions_path do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.label :thumbnail %><br />
    <%= f.text_area :thumbnail %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>
